#include "Jeu.h"// Inclusion du fichier header "Jeu.h"

void jeu() {  // Définition de la fonction `jeu` qui gère une nouvelle partie
  

    int nbrjoueur;//variable pour stocker le nombre de joueurs.
    char joueur1[50], joueur2[50], joueur3[50], joueur4[50];// variables pour stocker les noms de jusqu'à quatre joueurs, 
    printf("Combien de joueurs pour cette partie?\n");// saisir le nombre de joueurs.
    scanf("%d", &nbrjoueur);    // Lit la valeur entrée par l'utilisateur et la stocke dans la variable `nbrjoueur`.
    ChoixJoueurs(nbrjoueur, joueur1, joueur2, joueur3, joueur4); // Appelle la fonction `ChoixJoueurs` pour initialiser les noms des joueurs en fonction de leur nombre  
    if (nbrjoueur == 2) { // Vérifie si la partie se joue à deux joueurs.
        
        while (JeuGagné != 1) {// Une boucle qui continue tant qu'aucun joueur n'a gagné. 
            
        }
    }

return 0;

}

